<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="connect3.jrobbins.com.connectthree.MainActivity">

    <TextView
        android:id="@+id/titleTxt"
        android:layout_height="31dp"
        android:layout_width="wrap_content"
        android:text="@string/gameTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="140dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="140dp"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/resultTxt"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/player1"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="80dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/boardGridLayout"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="80dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="10dp"
        tools:layout_constraintBottom_creator="1" />

    <GridLayout
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/board"
        android:layout_width="wrap_content"
        android:id="@+id/boardGridLayout"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTxt"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="10dp"
        app:layout_constraintHorizontal_bias="0.42">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player1"
            android:id="@+id/chip1_1"
            android:layout_column="0"
            android:layout_row="0"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="15dp"
            android:onClick="onPlaceChip"
            android:alpha="0"
            android:contentDescription="@string/playerChip"
            android:tag="1"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player1"
            android:id="@+id/chip1_2"
            android:layout_column="1"
            android:layout_row="0"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="15dp"
            android:onClick="onPlaceChip"
            android:alpha="0"
            android:contentDescription="@string/playerChip"
            android:tag="2"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player1"
            android:id="@+id/chip1_3"
            android:layout_column="2"
            android:layout_row="0"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="15dp"
            android:onClick="onPlaceChip"
            android:alpha="0"
            android:contentDescription="@string/playerChip"
            android:tag="3"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player1"
            android:id="@+id/chip2_1"
            android:layout_column="0"
            android:layout_row="1"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="100dp"
            android:onClick="onPlaceChip"
            android:alpha="0"
            android:contentDescription="@string/playerChip"
            android:tag="4"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player1"
            android:id="@+id/chip2_2"
            android:layout_column="1"
            android:layout_row="1"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="100dp"
            android:onClick="onPlaceChip"
            android:alpha="0"
            android:contentDescription="@string/playerChip"
            android:tag="5"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player1"
            android:id="@+id/chip2_3"
            android:layout_column="2"
            android:layout_row="1"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="100dp"
            android:onClick="onPlaceChip"
            android:alpha="0"
            android:contentDescription="@string/playerChip"
            android:tag="6"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player1"
            android:id="@+id/chip3_1"
            android:layout_column="0"
            android:layout_row="2"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="185dp"
            android:onClick="onPlaceChip"
            android:alpha="0"
            android:contentDescription="@string/playerChip"
            android:tag="7"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player1"
            android:id="@+id/chip3_2"
            android:layout_column="1"
            android:layout_row="2"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="185dp"
            android:onClick="onPlaceChip"
            android:alpha="0"
            android:contentDescription="@string/playerChip"
            android:tag="8"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/player1"
            android:id="@+id/chip3_3"
            android:layout_column="2"
            android:layout_row="2"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="185dp"
            android:onClick="onPlaceChip"
            android:alpha="0"
            android:contentDescription="@string/playerChip"
            android:tag="9"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp" />

    </GridLayout>


</android.support.constraint.ConstraintLayout>
